SCRIPT=$(readlink "$0")
SCRIPTPATH=$(dirname "$SCRIPT")

function git_prompt_info() {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
  echo " $(parse_git_dirty)$ZSH_THEME_GIT_PROMPT_PREFIX$(current_branch)$ZSH_THEME_GIT_PROMPT_SUFFIX"
}

function get_pwd() {
  print $PWD
}

function put_spacing() {
  local git=$(git_prompt_info)
  if [ ${#git} != 0 ]; then
    ((git=${#git} - 10))
  else
    git=0
  fi

  local bat=$(battery_charge)
  if [ ${#bat} != 0 ]; then
    ((bat = ${#bat} - 18))
  else
    bat=0
  fi

  local termwidth
  (( termwidth = ${COLUMNS} - 3 - ${#HOST} - ${#$(get_pwd)} - ${bat} - ${git} ))

  local spacing=""
  for i in {1..$termwidth}; do
    spacing="${spacing} " 
  done
  echo $spacing
}

## prompt config

## PROMPT="$fg[cyan][%n@%m] $fg[green]$(get_pwd)$(git_prompt_info)$(battery_charge): $reset_color"

## git config variables

ZSH_THEME_GIT_PROMPT_PREFIX="[git:"
ZSH_THEME_GIT_PROMPT_SUFFIX="]$reset_color"
ZSH_THEME_GIT_PROMPT_DIRTY="$fg[red]"
ZSH_THEME_GIT_PROMPT_CLEAN="$fg[green]"
ZSH_THEME="frisk"

## FZF
FZF_DEFAULT_COMMAND=' ag -l --nocolor --hidden -g ""'
FZF_CTRL_T_COMMAND=$FZF_DEFAULT_COMMAND

## MacTex

export PATH=$PATH:/usr/texbin

## Fixes ctrl-p ctrl-s
stty -ixon -ixoff

# git-open
GITOPEN=$SCRIPTPATH/vendor/git-open
export PATH=$PATH:$GITOPEN

if [ -f ~/.profile ]; then
    source ~/.profile
fi

fpath=(/usr/local/share/zsh-completions $fpath)

# other local bin
export PATH=$SCRIPTPATH/bin:$PATH

# source zsh_nvm
source $SCRIPTPATH/vendor/zsh-nvm/zsh-nvm.plugin.zsh

# alias tmux for pretty colors
alias tmux="TERM=screen-256color-bce tmux"

# Use fd instead of find for fzf
export FZF_DEFAULT_COMMAND='fd --type f'

ag() {
  command ag \
    -p "$(git rev-parse --is-inside-work-tree &>/dev/null && echo "$(git rev-parse --show-toplevel)/.gitignore")" \
    "$@"
}

alias vim="nvim"
alias vi="nvim"
